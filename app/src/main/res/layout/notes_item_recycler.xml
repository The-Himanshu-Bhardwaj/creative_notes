<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:elevation="20dp"
        app:cardCornerRadius="11dp">


        <View
            android:id="@+id/priorityViewDOT"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="end"
            android:layout_margin="10dp"

            android:background="@drawable/grreen_circle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/sans_bold"
                android:padding="5dp"
                android:text="Title Goes Here"
                android:textColor="@color/Grey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/subtitleTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/sans_regular"
                android:padding="5dp"
                android:text="Your Title Goes Here"
                android:textColor="@color/Grey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/noteTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/sans_regular"
                android:padding="5dp"
                android:text="This is a test note for the card view and recycler view in the layout resource file that I made right now"
                android:textColor="@color/Grey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/dateTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/sans_bold"
                android:padding="5dp"
                android:text="05 May, 2022"
                android:textColor="@color/black"
                android:textSize="17sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>